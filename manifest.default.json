{
  "manifest_version": 3,
  "name": "云端书签",
  "version": "1.0.1",
  "description": "基于WebDAV的云端书签管理插件",
  
  "permissions": [
    "storage",
    "bookmarks",
    "tabs",
    "contextMenus",
    "alarms",
    "activeTab"
  ],
  
  "host_permissions": [
    "<all_urls>"
  ],
  
  "background": {
    "service_worker": "background/background.js"
  },
  
  "icons": {
    "16": "assets/icons/icon.svg",
    "32": "assets/icons/icon.svg",
    "48": "assets/icons/icon.svg",
    "128": "assets/icons/icon.svg"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "assets/icons/icon.svg",
      "32": "assets/icons/icon.svg",
      "48": "assets/icons/icon.svg",
      "128": "assets/icons/icon.svg"
    }
  },
  
  "options_page": "options/options.html",
  
  "commands": {
    "add-bookmark": {
      "suggested_key": {
        "default": "Ctrl+Shift+B",
        "mac": "Command+Shift+B"
      },
      "description": "添加当前页面为书签"
    }
  }
}

