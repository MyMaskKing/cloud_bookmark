{
  "manifest_version": 3,
  "name": "云端书签",
  "version": "1.0.0",
  "description": "基于WebDAV的云端书签管理插件",
  
  "permissions": [
    "storage",
    "bookmarks",
    "tabs",
    "contextMenus",
    "alarms",
    "activeTab"
  ],
  
  "host_permissions": [
    "<all_urls>"
  ],
  
  "background": {
    "service_worker": "background/background.js"
  },
  
  "icons": {
    "16": "assets/icons/icon16.png",
    "32": "assets/icons/icon32.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "32": "assets/icons/icon32.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    }
  },
  
  "options_page": "options/options.html",
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/floating-ball.js"],
      "run_at": "document_idle"
    }
  ],
  
  "commands": {
    "add-bookmark": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      },
      "description": "添加当前页面为书签"
    }
  }
}

