{
  "manifest_version": 2,
  "name": "云端书签",
  "version": "1.0.0",
  "description": "基于WebDAV的云端书签管理插件",
  "permissions": [
    "<all_urls>",
    "storage",
    "bookmarks",
    "tabs",
    "contextMenus",
    "alarms",
    "activeTab"
  ],
  "background": {
    "scripts": [
      "utils/storage.js",
      "utils/webdav.js",
      "background/background.js"
    ]
  },
  "icons": {
    "16": "assets/icons/icon.svg",
    "32": "assets/icons/icon.svg",
    "48": "assets/icons/icon.svg",
    "128": "assets/icons/icon.svg"
  },
  "browser_action": {
    "default_popup": "popup/popup.html",
    "default_title": "云端书签",
    "default_icon": {
      "16": "assets/icons/icon.svg",
      "32": "assets/icons/icon.svg",
      "48": "assets/icons/icon.svg",
      "128": "assets/icons/icon.svg"
    }
  },
  "options_page": "options/options.html",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content/floating-ball.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "commands": {
    "add-bookmark": {
      "suggested_key": {
        "default": "Ctrl+Shift+Z",
        "mac": "Command+Shift+Z"
      },
      "description": "添加当前页面为书签"
    }
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "cloud-bookmark-firefox@example.com",
      "strict_min_version": "140.0",
      "data_collection_permissions": {
        "required": [
          "none"
        ]
      }
    }
  }
}